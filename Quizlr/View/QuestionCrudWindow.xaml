<Window x:Class="Quizlr.View.QuestionCrudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vragen Beheren"
        MinHeight="480" MinWidth="640"
        Height="480" Width="640"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource BasicWindow}"
        DataContext="{Binding Source={StaticResource Locator}}">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <!--Questions-->
        <Grid Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ListView Grid.Row="0"></ListView>
            <Grid Grid.Row="1" Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Toevoegen" Margin="0,0,2.5,0"/>
                <Button Grid.Column="1" Content="Verwijderen" Margin="2.5,0,0,0"/>
            </Grid>
        </Grid>
        <!--/Questions-->
    </Grid>
</Window>