<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="CloudsBrush" Color="#ecf0f1"/>

    <Style x:Key="FontBase" TargetType="{x:Type Control}">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="BasicWindow" TargetType="{x:Type Window}" BasedOn="{StaticResource FontBase}">
        <Setter Property="Height" Value="480"/>
        <Setter Property="Width" Value="640"/>
        <Setter Property="ResizeMode" Value="NoResize"/>
        <Setter Property="Background" Value="{StaticResource CloudsBrush}"/>
    </Style>
</ResourceDictionary>